<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>
      <div>
        <%= label_tag :email %>
        <%= email_field_tag :email, params[:email] %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= link_to t('.create_new_user'), new_user_path %>
      </div> 
      <div>
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>
