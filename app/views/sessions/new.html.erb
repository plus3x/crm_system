<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag 'login' do %>
      <div>
        <%= label_tag t :email %>
        <%= email_field_tag :email, params[:email] %>
        <%= label_tag t :password %>
        <%= password_field_tag :password, params[:password] %>
        <%= submit_tag "Login" %>
      </div>
      <div>
        <%= link_to t('.create_new_user'), new_user_path %>
      </div> 
  <% end %>
</div>
